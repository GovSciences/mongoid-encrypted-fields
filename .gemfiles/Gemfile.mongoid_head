source 'https://rubygems.org'
gemspec path: '..'

gem 'rake'
gem 'mongoid', github: 'mongoid/mongoid'
gem 'json', '< 2' if RUBY_VERSION < '2.0'

group :test do
  gem 'coveralls', ('<= 0.8.14' if RUBY_VERSION < '2.0'), require: false
  gem 'encrypted_strings', '~> 0.3'
  gem 'gibberish', '~> 1.2.2'
  gem 'rspec', '~> 2.13'
  gem 'simplecov', require: false
end
